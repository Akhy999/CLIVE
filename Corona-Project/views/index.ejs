<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>CaseStudy</title>

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@700&family=Roboto:wght@300&family=Source+Sans+Pro&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="css/styles.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js">

  </script>

  </head>
  <body>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="position: relative; height:500px; width:60vw">
    <canvas id="myChart"></canvas>
    </div>
  </body>
<script type="text/javascript">

  var ctx = document.getElementById('myChart').getContext('2d');

  Chart.defaults.global.defaultFontSize=18;
  var Length=[];
  var S=<%=Dates%>;
  for(i=1;i<=S;i++){
    Length.push(i);
  }
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels:Length,
        fontSize:14,
        datasets: [{
          label:'Active',
          data:[<%= Active %>],
          borderWidth:1,
          borderColor:'rgba(100,100,100,1)'
       },
        {
            label: 'Confirmed',
            data: [<%= Confirmed %>],
            borderWidth:1,
            borderColor:'rgba(100,240,200,1)',
              },
        {
          label:'Deaths',
          data:[<%= Deaths %>],
          borderWidth:0.5,
          borderColor:'rgba(255,0,0,1)',
      backgroundColor:'rgba(255,0,0,0.6)',
            backgroundColor:'rgba(255,0,0,0.5)'
        }]
    },
    options: {
      title:{
        display:true,
        text:'Case study for Corona for past 45days',
        fontSize:30,
        fontColor:'rgba(0,0,0,1)'
      },
        scales: {
            yAxes: [{
                ticks: {
                  beginAtZero:true
                    }
               }]
        }
    }
});
</script>
<%- include("footer") -%>
</html>
