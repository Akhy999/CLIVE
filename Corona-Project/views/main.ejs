<%- include("header") -%>

<div style="margin-left:20px;">
  <h1>Covid-19</h1>




<div class="row">
  <div class="col-lg-6">
  <canvas id="myChart1"></canvas>
  </div>
  <div class="col-lg-6">
  <canvas id="myChart2"></canvas>
  </div>
</div>

